%table{:class=>"table table-striped table-condensed table-matches"}
  %thead
    %tr
      %th{:colspan=>"2"}Hero
      %th Result
      %th Type
      %th Duration
      %th KDA
  %tbody
    - @matches.each do |match|
      %tr
        %td
          =image_tag match.players.find_by_account_id(@user.account_id).hero.picture_url, :style=>'width:43px;height:24px;'
        %td
          =link_to match.players.find_by_account_id(@user.account_id).hero.localized_name, match
        %td
          - if match.players.find_by_account_id(@user.account_id).win?
            <span class="label label-success">Won Match</span>
          - else
            <span class="label label-danger">Lost Match</span>
        %td
          =match.lobby ? match.lobby.name : ""
        %td
          =duration_format match.duration
        %td
          =match.players.find_by_account_id(@user.account_id).kills
          \/
          =match.players.find_by_account_id(@user.account_id).deaths
          \/
          =match.players.find_by_account_id(@user.account_id).assists

=paginate @matches